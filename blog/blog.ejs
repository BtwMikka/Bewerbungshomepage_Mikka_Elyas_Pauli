   <div id="textbereich">
    <div class="content-block">
    <h1>Blog</h1>
      <hr>
        <% const strArr1 = dateiDaten; %>
        <% const dscArr = strArr1.sort((a, b) => b.date.localeCompare(a.date)); %>
                
        <% dscArr.forEach(datei => { %>
         
         <!-- Datum umwandeln in ein deutsches Format (TT.MM.JJJJ) -->
         <% var st = datei.date %>
         <% var dt = new Date(st); %>
         <% var date_blog = ("0" + dt.getDate()).slice(-2) + "." + ("0" + (dt.getMonth() + 1)).slice(-2) + "." + dt.getFullYear() %>
          
         <% var datei_link = datei.path.slice(0, -3);%>
         <% var datei_img = datei.img; %>
         <a href='<%= datei_link %>'>
          <div class="post">
             <p class="title">
              <%= date_blog %> - <%= datei.description %>
              <%if (datei.img) { %>
                <img style="float:right;" src='<%= datei.img %>#img-blog' alt="Blog">
              <% } %>
             </p>
           </div>
         </a>
        <% }); %>

    </div><!-- Ende textbereich -->
